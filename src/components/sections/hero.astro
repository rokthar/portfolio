---
import {name, nickname, profesion, image, social_networks, mail} from '@info'
import Mail from '../icons/mail.astro'
---

<section class="flex flex-row gap-5 max-[500px]:gap-2">
    <img src={image} alt="" class="w-20 h-20 rounded-lg">
    <div class="flex flex-col">
        <h1 class="text-3xl font-bold text-zinc-300 max-[500px]:text-xl">{name}</h1>
        <h2 class="text-xl text-zinc-400 max-[500px]:text-[20px]">{profesion}</h2>
        <a href="mailto:{mail}" class="flex flex-row items-center gap-1 hover:underline">
            <Mail/>
            <span class="text-zinc-200 hover:underline max-[500px]:text-sm">{mail}</span>
        </a>
    </div>
</section>