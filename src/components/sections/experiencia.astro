---
import { experiencia } from '../../../informacion.json';
import Chip from '../shared/chip.astro';
---

<section class="mt-10 mx-10 p-3">
    <div class="flex flex-col">
        <h2 class="text-2xl font-black text-zinc-300">{experiencia.titulo}</h2>
        <div class="flex flex-col mt-5 p-2">
            {
                experiencia.trabajos.map((trabajo) => (
                    <div class="flex flex-row justify-between">
                        <h3 class="text-xl font-black text-zinc-300">{trabajo.empresa}</h3>
                        <span class="text-zinc-500">{trabajo.fecha_inicio} - {trabajo.fecha_fin}</span>    
                    </div>
                    <p class="mt-3 text-zinc-400">{trabajo.descripcion}</p>
                    <div class=" flex flex-row gap-3 mt-3 ">
                        {
                            trabajo.tecnologias.map((tecnologia) => (
                                <Chip label={tecnologia.label} />
                            ))
                        }
                    </div>
                ))
            }
        </div>
    </div>
</section>
